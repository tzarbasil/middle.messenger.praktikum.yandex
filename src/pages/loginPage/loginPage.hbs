    <main class="login_page">
         <form class="main__form">
         <h2 class="main__form_title">Вход</h2>
        <div class="main__form_inputs">
            <label>
                Логин
                <input name="{{login}}" placeholder="{{placeholder}}" type="{{type}}" >
            </label>            
            <label>
                Пароль
                <input name="{{password}}" placeholder="{{placeholder}}" type="{{type}}" >
            </label> 
        </div>

        <div class="btn_container">
            {{> authButton data-current_page="messanger_page"  }}
            {{> regButton data-current_page="register_page"  }}
        </div>
         </form>
    </main>